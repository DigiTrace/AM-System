{% extends 'base.html.twig' %}
{% form_theme changeform 'bootstrap_3_layout.html.twig' %} 


{% block content1 %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message |trans }}
                </div>
            {% endfor %}
        {% endfor %}
    

    

        {{ form_start(changeform) }}
    
    

    
             <div class="row">
                 <div class='col-sm-4'>
                     <div id="case_id_field">
                    {{ form_label(changeform.username) }}
                    {{ form_widget(changeform.username) }}
                    {{ form_errors(changeform.username) }}
                    <span class="help-block"></span>
                     </div>
                </div>                 
             </div>
                
             <div class="row">
                 <div class='col-sm-4'>
                    {{ form_label(changeform.fullname) }}
                    {{ form_errors(changeform.fullname) }}
                    {{ form_widget(changeform.fullname) }}
                    <span class="help-block"></span>
                </div>   
             </div>

            <div class="row">
                 <div class='col-sm-4'>
                    {{ form_label(changeform.email) }}
                    {{ form_errors(changeform.email) }}
                    {{ form_widget(changeform.email) }}
                    <span class="help-block"></span>
                </div>   
             </div>




             <div class="row">
                <div class='col-sm-4'>
                    {{ form_widget(changeform.save) }}
                   
                </div>
             </div>        
    {{ form_widget(changeform) }}

    {{ form_end(changeform) }}


{% endblock %}



{% block context %}
    <a href='{{ path('NutzerPasswordAenderung') }}'>{% trans %} action.change.password {% endtrans %}</a><br>
    <a href='{{ path('Nutzerprofil') }}'>{% trans %} action.show.profile {% endtrans %}</a><br>
    <a href='{{ path('NutzerAenderung') }}'>{% trans %} action.edit.profile {% endtrans %}</a><br>
    {% if is_granted('ROLE_ADMIN') %}
             <a href='{{ path('Nutzerhinzufuegen') }}'>{% trans %} action.add.user {% endtrans %} </a><br>
             <a href='{{ path('usersummary') }}'>{% trans %} action.show.users {% endtrans %} </a><br>
    {% endif %}
    <a href='{{ path('change_language') }}'>{% trans %} action.change.language {% endtrans %} </a><br>
{% endblock %}
